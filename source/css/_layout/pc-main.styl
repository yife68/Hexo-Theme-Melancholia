.pc-main

  @media screen and (max-width: 820px)
    display: none!important

  .banner
    display: flex
    padding: 20px
    box-shadow: var(--icat-shadow-border)
    background: var(--icat-card-bg)
    border-radius: 12px
    border: 1px solid var(--icat-card-border)

    .banner-left
      min-width: calc(100% / 2)
      display: flex

      img
        height: 290px
        aspect-ratio: 3/4
        border-radius: 6px
        border: 1px solid var(--icat-card-border)
      
      .book-information
        width: 100%
        margin-left: 20px
        position: relative

        .book-title
          display: flex
          align-items: baseline
          font-weight: 600

          .title
            color: var(--icat-text-highlight-color)
            font-size: 20px

          .publish-in-instalments
            padding: 0 12px
            font-size: 13px
            color: #008439

          .end
            padding: 0 12px
            font-size: 13px
            color: var(--icat-banner-text-color)
        
        .book-category
          margin-left: -3px

          .category
            margin: 0 3px
            padding: 3px 6px
            background-color: rgba(51,51,51,0.06)
            border-radius: 6px
            border: 1px solid var(--icat-card-border)
            font-size: 14px
            color: var(--icat-secondtext)

        .book-total
          display: flex
          align-items: center
          color: var(--icat-text-highlight-color)

          .key
            color: var(--icat-banner-text-color)
        
        .one
          padding-top: 22px
          letter-spacing: .5px

        .two
          padding-top: 16px

          .bold
            font-weight: 600

        .three
          padding-top: 4px

          .bold
            font-weight: 600

        .read
          position: absolute
          bottom: 0
          padding: 12px 0
          width: 220px
          display: flex
          align-items: center
          justify-content: center
          background-color: #f56c6c
          border-radius: 4px
          border: 1px solid var(--icat-card-border)
          color: var(--icat-text-highlight-color)

          i
            margin-right: 6px


    .banner-right
      min-width: calc(100% / 2)
      background: var(--icat-secondbg)
      border-radius: 6px;
      border: 2px solid var(--icat-card-border)

      .banner-introduce
        padding: 0 14px

        p
          color: var(--icat-text-highlight-color)
          font-size: 18px
          font-weight: 600

        span
          font-weight: 300
          font-size: smaller
          color: var(--icat-secondtext)