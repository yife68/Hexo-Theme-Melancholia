.pe-main
  display: none!important

  @media screen and (max-width: 820px)
    display: inline-block!important

  .banner-top
    display: flex
    position: relative
    height: 210px
    padding-top: 80px
    filter: var(--icat-darken-filter)

    .book-information
      display: inline-block
      width: auto
      padding-left: 12px

      .title
        color: var(--icat-text-highlight-color)
        font-size: 18px
        padding: 12px 0
        font-weight: 600

      .book-total
        display: flex
        font-size: 14px
        color: var(--icat-text-highlight-color)

        .separate:after
          content: 'Â·'
          padding: 0 3px
      
      .read
        background-image: linear-gradient(45deg, #d7ba7f 0%, #ecd8ad 100%)
        padding: 10px 0
        width: 120px
        display: flex
        align-items: center
        justify-content: center
        border-radius: 30px
        border: 1px solid #c3c3c3
        margin-top: 20px
        font-size: 13px
        color: var(--icat-banner-text-color)

        span
          font-weight: 600
          letter-spacing: 0.1rem

        i
          margin-right: 6px

    img
      height: 140px
      aspect-ratio: 3/4
      border-radius: 6px
      border: 1px solid var(--icat-card-border)
      position: absolute
      right: 12px

  .banner-bottom
    position: sticky
    margin-top: -30px
    background: var(--icat-card-bg)
    border-radius: 12px 12px 0 0
    padding: 12px
    overflow: hidden

    .banner-introduce

      p
        color: var(--icat-fontcolor)
        font-weight: 600
        font-size: 18px

    .book-introduce
      color: var(--icat-secondtext)
      font-size: 14px

    .book-category
      margin-left: -3px
      margin-top: 12px

      .category
        margin: 0 3px
        padding: 3px 6px
        background-color: rgba(51,51,51,0.06)
        border-radius: 6px
        border: 1px solid var(--icat-card-border)
        font-size: 14px
        color: var(--icat-secondtext)

    .author
      position: relative

      .author-img
        position: absolute
        right: 0
        width: 100px
        height: 100px
        -webkit-transform: translate(30%,12%)
        -moz-transform: translate(30%,12%)
        -o-transform: translate(30%,12%)
        -ms-transform: translate(30%,12%)
        transform: translate(30%,12%)
        opacity: .2
        bottom: 0
        z-index: 1

        img
          width: 100%
          height: 100%
          -webkit-transition: filter 375ms ease-in 0.2s, -webkit-transform 0.3s
          -moz-transition: filter 375ms ease-in 0.2s, -moz-transform 0.3s
          -o-transition: filter 375ms ease-in 0.2s, -o-transform 0.3s
          -ms-transition: filter 375ms ease-in 0.2s, -ms-transform 0.3s
          transition: filter 375ms ease-in 0.2s, transform 0.3s
          object-fit: cover
          border-radius: 50%
          border: 4px solid #f0f0f2
      
      .author-name
        color: var(--icat-fontcolor)
        
        .name
          font-weight: 600

      .author-statistics
        margin-top: 8px
        color: var(--icat-secondtext)

      .author-introduce

        .introduce
          padding-top: 8px

        span
          color: var(--icat-fontcolor)

  .author-home
    padding: 12px 0 0
    color: var(--icat-secondtext)
    display: flex
    align-items: center
    justify-content: space-between
    background: var(--icat-card-bg)
    padding: 12px
    margin-top: -12px
    position: sticky
    z-index: 999


#separator-bar
  border-top: 1px dashed var(--icat-theme-op)
  margin-top: 22px